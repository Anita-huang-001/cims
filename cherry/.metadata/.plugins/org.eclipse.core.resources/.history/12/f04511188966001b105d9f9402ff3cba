  </sql>
  <!-- 根据用户ID查询所拥有的角色 -->
  <select id="selectRoleByUserId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from user_role
    where USER_ID = #{userId,jdbcType=INTEGER} and DELETE_FLAG = 0
  </select>

  <!-- 新建用户相应的权限 -->
  <insert id="insert" parameterType="com.mi.cims.bean.po.UserRole">
